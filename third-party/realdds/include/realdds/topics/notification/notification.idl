module realdds
{
    module topics
    {
        module raw
        {
            enum notification_data_type
            {
                NOTIFICATION_DATA_JSON,
                NOTIFICATION_DATA_CBOR,
                NOTIFICATION_DATA_CUSTOM
            };
            struct notification
            {
                notification_data_type data_type;
                octet version[4];  // in decreasing importance, so version[0] is highest
                sequence<octet,4096> data;  // bound to 4K
            };
        };
    };
};
